<ul class="posts">
  <li class="post">
    <%= link_to user_post_path(post.author_id, post.id) do %>
      <div class="post__container">
        <div class="post__title"><%= post.title %></div>
        <div class="post__text"><%= post.text %></div>
        <div class="post__comments_counter">Number of Comments: <%= post.comments_counter %></div>
        <div class="post__likes_counter">Number of Likes: <%= post.likes_counter %></div>
      </div>
    <% end %>
    <% post.five_most_recent_comments.each do |comment| %>
      <%= render comment %>
    <% end %>
  </li>
</ul>